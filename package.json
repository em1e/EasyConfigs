{
  "name": "easyconfigs",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "author": {
    "name": "em1e",
    "email": "emi.projects@outlook.com",
    "url": "https://github.com/em1e"
  },
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build": "pnpm --filter=easyconfigs build",
    "dev": "pnpm --filter=easyconfigs dev",
    "start": "pnpm --filter=easyconfigs start",
    "lint": "pnpm --filter=easyconfigs lint",
    "lint:fix": "pnpm --filter=easyconfigs lint:fix",
    "typecheck": "pnpm --filter=easyconfigs typecheck",
    "format:write": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "pnpm lint && pnpm typecheck && pnpm format:check",
    "test": "pnpm --filter=easyconfigs test",
    "docker:build": "./scripts/docker/build.sh easyconfigs",
    "docker:run": "./scripts/docker/run.sh easyconfigs",
    "docker:dev": "docker-compose -f docker-compose.yml up --build",
    "docker:clean": "./scripts/docker/cleanup.sh"
  },
  "packageManager": "pnpm@9.0.6",
  "dependencies": {
    "@typescript-eslint/parser": "^5.59.7",
    "autoprefixer": "^10.4.14",
    "cross-env": "^7.0.3",
    "eslint": "^8.41.0",
    "eslint-config-next": "13.3.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-tailwindcss": "3.13.1",
    "js-yaml": "^4.1.0",
    "postcss": "^8.4.24",
    "prettier": "^2.8.8",
    "tailwindcss": "3.4.6",
    "tailwindcss-animate": "^1.0.5",
    "tsx": "^4.1.4",
    "vite": "^5.4.15",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^2.1.9"
  },
  "devDependencies": {
    "@types/hast": "^3.0.4",
    "@types/node": "^20.11.27",
    "@types/react": "^18.2.65",
    "@types/react-dom": "^18.2.22",
    "typescript": "^5.5.3"
  }
}
